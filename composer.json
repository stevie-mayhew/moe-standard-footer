{
    "name": "education/standard-footer",
    "description": "Common footer styles for education.govt.nz",
    "type": "silverstripe-vendormodule",
    "autoload": {
        "psr-4": {
            "Education\\StandardFooter\\": "src/",
            "Education\\StandardFooter\\Tests\\": "tests/"
        }
    },
    "require": {
        "education/cwp-core": "^2",
        "education/silverstripe-ds": "^1"
    },
    "extra": {
        "expose": [
            "client"
        ],
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/"
    }
}
